<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view2"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="2dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_alarm_black_48dp"
            android:id="@+id/opening_hours_image_View"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="From 10 to 22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:id="@+id/textView2"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/opening_hours_image_View" />

        <TextView
            android:text="przykladowy tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="93dp"
            android:id="@+id/textView4"
            android:layout_alignBottom="@id/opening_hours_image_View"
            android:layout_alignStart="@+id/textView2" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
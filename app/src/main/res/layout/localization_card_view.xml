<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    card_view:cardCornerRadius="@dimen/my_card_corner_radius"
    android:elevation="@dimen/my_elevation"
    android:layout_margin="@dimen/my_margin_for_card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="localizationOnClick">

        <ImageView
            android:id="@+id/localization_image_view"
            android:layout_width="@dimen/icon_standard_width_and_height"
            android:layout_height="@dimen/icon_standard_width_and_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/localization_blue" />

        <TextView
            android:id="@+id/localization_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/localization_image_view"
            android:text="@string/restauration_adress"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/localization_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:text="@string/localization_zip_code"
            android:textSize="17sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>